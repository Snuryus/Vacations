<form class='form-horizontal' name='head_chg'>
<input type='hidden' name='index' value='$index'>
<input type='hidden' name='sid' value='$sid'>
<input type='hidden' name='id' value='%chg%'>
<div class='row'>
  <div class='box box-theme box-form'>
    <div class='box-header with-border'><h3 class='box-title'>Глава компании</h3></div>
    <div class='box-body'>
      <div class='form-group'>
      <div class='col-md-12'><b>Компания</b></div>
        <div class='col-md-12'>
          <input class='form-control' type='text' name='company' value='%company%'>
        </div>
      </div>
      <div class='form-group'>
      <div class='col-md-12'><b>Должность</b></div>
        <div class='col-md-12'>
          <input class='form-control' type='text' name='position' value='%position%'>
        </div>
      </div>
      <div class='form-group'>
      <div class='col-md-12'><b>ФИО</b></div>
        <div class='col-md-12'>
          <input class='form-control' type='text' name='fio' value='%fio%'>
        </div>
      </div>
    </div>
    <div class='box-footer'>
      <input type=submit name='%BTN_ACT%' value='%BTN_NAME%' class='btn btn-primary'>
    </div>  
  </div>
</div>
</form>

